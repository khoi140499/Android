<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#262626"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:id="@+id/txtKQ"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:fontFamily="casual"
            android:gravity="right"
            android:editable="false"
            />
        <TableLayout
            android:layout_below="@+id/txtKQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            >
            <TableRow>
                <Button
                    android:id="@+id/btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_span="2"
                    android:fontFamily="casual"
                    android:textSize="30dp"
                    android:padding="20dp"
                    android:backgroundTint="#535353"
                    android:layout_margin="1dp"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnXoa"
                    android:text="AC"
                    android:fontFamily="casual"
                    android:textSize="30dp"
                    android:padding="20dp"
                    android:backgroundTint="#3D84DC"
                    android:layout_margin="1dp"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnCong"
                    android:text="+"
                    android:fontFamily="casual"
                    android:textSize="30dp"
                    android:padding="20dp"
                    android:backgroundTint="#E76A00"
                    android:layout_margin="1dp"
                    />
            </TableRow>
            <TableRow
                android:layout_marginTop="-11dp"
                >
                <Button
                    android:id="@+id/btn7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:fontFamily="casual"
                    android:textSize="30dp"
                    android:padding="20dp"
                    android:backgroundTint="#535353"
                    android:layout_margin="1dp"
                    />
                <Button
                    android:id="@+id/btn8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:fontFamily="casual"
                    android:textSize="30dp"
                    android:padding="20dp"
                    android:backgroundTint="#535353"
                    android:layout_margin="1dp"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn9"
                    android:text="9"
                    android:fontFamily="casual"
                    android:textSize="30dp"
                    android:padding="20dp"
                    android:backgroundTint="#535353"
                    android:layout_margin="1dp"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnTru"
                    android:text="-"
                    android:fontFamily="casual"
                    android:textSize="30dp"
                    android:padding="20dp"
                    android:backgroundTint="#E76A00"
                    android:layout_margin="1dp"
                    />
            </TableRow>

            <TableRow
                android:layout_marginTop="-11dp"
                >
                <Button
                    android:id="@+id/btn4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:fontFamily="casual"
                    android:textSize="30dp"
                    android:padding="20dp"
                    android:backgroundTint="#535353"
                    android:layout_margin="1dp"
                    />
                <Button
                    android:id="@+id/btn5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:fontFamily="casual"
                    android:textSize="30dp"
                    android:padding="20dp"
                    android:backgroundTint="#535353"
                    android:layout_margin="1dp"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn6"
                    android:text="6"
                    android:fontFamily="casual"
                    android:textSize="30dp"
                    android:padding="20dp"
                    android:backgroundTint="#535353"
                    android:layout_margin="1dp"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnChia"
                    android:text="/"
                    android:fontFamily="casual"
                    android:textSize="30dp"
                    android:padding="20dp"
                    android:backgroundTint="#E76A00"
                    android:layout_margin="1dp"
                    />
            </TableRow>
            <TableRow
                android:layout_marginTop="-11dp"
                >
                <Button
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:fontFamily="casual"
                    android:textSize="30dp"
                    android:padding="20dp"
                    android:backgroundTint="#535353"
                    android:layout_margin="1dp"
                    />
                <Button
                    android:id="@+id/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:fontFamily="casual"
                    android:textSize="30dp"
                    android:padding="20dp"
                    android:backgroundTint="#535353"
                    android:layout_margin="1dp"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn3"
                    android:text="3"
                    android:fontFamily="casual"
                    android:textSize="30dp"
                    android:padding="20dp"
                    android:backgroundTint="#535353"
                    android:layout_margin="1dp"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnNhan"
                    android:text="*"
                    android:fontFamily="casual"
                    android:textSize="30dp"
                    android:padding="20dp"
                    android:backgroundTint="#E76A00"
                    android:layout_margin="1dp"
                    />
            </TableRow>
            <TableRow
                android:layout_marginTop="-11dp"
                >
                <Button
                    android:id="@+id/btn0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="casual"
                    android:textSize="30dp"
                    android:padding="20dp"
                    android:backgroundTint="#535353"
                    android:layout_span="2"
                    android:layout_margin="1dp"
                    />
                <Button
                    android:id="@+id/btnCham"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:fontFamily="casual"
                    android:textSize="30dp"
                    android:padding="20dp"
                    android:backgroundTint="#535353"
                    android:layout_margin="1dp"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnBang"
                    android:text="="
                    android:fontFamily="casual"
                    android:textSize="30dp"
                    android:padding="20dp"
                    android:backgroundTint="#E76A00"
                    android:layout_margin="1dp"
                    />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>